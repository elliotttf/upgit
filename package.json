{
  "name": "upgit",
  "version": "1.0.0",
  "description": "Opens pull requests against a target repository from a source file or files.",
  "main": "index.js",
  "scripts": {
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "test": "istanbul cover --print both nodeunit ./test/index.js",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elliotttf/upgit.git"
  },
  "keywords": [
    "git",
    "pull",
    "request"
  ],
  "author": "Elliott Foster <elliottf@codebrews.com> (http://codebrews.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/elliotttf/upgit/issues"
  },
  "homepage": "https://github.com/elliotttf/upgit#readme",
  "dependencies": {
    "fs-extra-promise": "^0.4.1",
    "github-api": "^2.3.0",
    "nodegit": "^0.16.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.14",
    "eslint": "^3.6.1",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0",
    "ghooks": "^1.3.2",
    "istanbul": "^0.4.5",
    "nodeunit": "^0.10.2",
    "sinon": "^1.17.6"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "engines": {
    "node": ">=6"
  }
}
